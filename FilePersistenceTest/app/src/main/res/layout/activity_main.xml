    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Type some thing you want to save!"
        android:layout_below="@+id/edit"
        android:layout_marginTop="20dp"
        ></EditText>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_saveFile"
        android:text="SAVE FILE"></Button>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/read"
        android:hint="Content from the file"
        android:layout_marginTop="20dp"
        ></EditText>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_readFile"
        android:text="READ FILE"></Button>


